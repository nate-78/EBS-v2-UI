</nav>

<style>
  ul {
    padding: 0;
    margin: 0;
    list-style: none;
    display: flex;
    justify-content: flex-end;
    gap: 1.5rem;
    align-items: center;
  }
  nav a {
    text-decoration: none;
    font-weight: 500;
    transition: color .3s ease;
    position: relative;
  }
  nav a:hover {
    color: var(--teal);
  }
  nav a.active::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 100%;
    border-bottom: 2px solid var(--magenta);
  }
</style>

<script>
  // @ts-nocheck
  document.addEventListener("DOMContentLoaded", function () {
    const links = document.querySelectorAll('nav li a');
    links.forEach(link => {
      if (window.location.href.includes(link.href) && link.getAttribute('href') !== '#') {
        link.classList.add('active');
      }
    });
  });
</script>